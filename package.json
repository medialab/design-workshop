{
  "name": "design-workshop",
  "version": "0.0.1",
  "description": "design workshop (components, styling themes and documentation) for Sciences Po médialab simple applications",
  "main": "components/index.js",
  "author": "médialab Sciences Po",
  "license": "LGPL-3.0",
  "scripts": {
    "lint:code": "eslint src;eslint stories",
    "lint:code:fix": "eslint --fix src;eslint --fix stories",
    "lint:style": "stylelint src",
    "lint:style:fix": "stylelint src --fix",
    "build": "babel src/components --out-dir components;node build-themes",
    "prepublish": "npm run build",
    "storybook": "start-storybook -p 6006",
    "deploy-storybook": "storybook-to-ghpages",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": "^16.8",
    "react-dom": "^16.8",
    "@fortawesome/fontawesome-svg-core": "^1.2.8",
    "@fortawesome/free-solid-svg-icons": "^5.5.0",
    "@fortawesome/react-fontawesome": "^0.1"
  },
  "dependencies": {
    "@storybook/addon-actions": "^5.0.10",
    "bloomer": "^0.6.3",
    "bulma": "^0.7.0",
    "bulma-material-form": "^0.1.0",
    "classnames": "^2.2.6",
    "codemirror": "^5.37.0",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.11",
    "rc-slider": "^8.6.4",
    "rc-tooltip": "^3.7.3",
    "react-codemirror2": "^5.0.1",
    "react-color": "^2.17.2",
    "react-dropzone": "^10.1.4",
    "react-onclickoutside": "^6.7.1",
    "react-router-dom": "^5.0.0",
    "react-tooltip": "^3.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime-corejs2": "^7.0.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.12",
    "@fortawesome/free-solid-svg-icons": "^5.6.3",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "@robindemourat/eslint-config": "https://github.com/robindemourat/eslint-config",
    "@storybook/addon-links": "^5.0.10",
    "@storybook/addon-options": "^5.0.10",
    "@storybook/addon-viewport": "^5.0.10",
    "@storybook/addons": "^5.0.10",
    "@storybook/react": "^5.0.11",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^3.0.1",
    "fs-extra": "^7.0.1",
    "image-webpack-loader": "^4.6.0",
    "node-sass": "^4.12.0",
    "pre-commit": "^1.2.2",
    "raw-loader": "^2.0.0",
    "react": "^16.8",
    "react-dom": "^16.8",
    "react-markdown": "^4.0.8",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-scss": "^3.6.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.30.0"
  },
  "pre-commit": [
    "lint:code",
    "lint:style",
    "build"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@robindemourat/eslint-config/es7",
      "@robindemourat/eslint-config/react"
    ],
    "plugins": [
      "babel"
    ],
    "rules": {
      "react/forbid-prop-types": 0,
      "react/jsx-no-bind": 0,
      "react/jsx-indent": 1,
      "react/no-set-state": 0,
      "react/prefer-stateless-function": 0,
      "object-curly-spacing": [
        0
      ],
      "babel/object-curly-spacing": [
        2,
        "never"
      ]
    }
  }
}
